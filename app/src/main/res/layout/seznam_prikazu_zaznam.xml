<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/prikaz_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/prikaz_upravit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/mezera_8dp" />

    <Button
        android:id="@+id/prikaz_upravit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:minHeight="@dimen/mezera_40dp"
        android:minWidth="@dimen/mezera_16dp"
        android:text="@string/prikazy_seznam_upravit"
        android:textSize="@dimen/font_12sp" />

</RelativeLayout>
